@{
    ViewData["Title"] = "Add a client";
}

<h2>Add a client</h2>

@if (Model.Count == 0)
{
    <p>You have to enter a stlylist first!</p>
}
else
{
    <form action="/">
        <label for="name">Name</label>
        <input type="text" />
        <label for="stylist">Stylist</label>
        <select>
            @foreach(var stylist in Model)
            {
                <option value="Model.Id">Model.Name</option>
            }
        </select>
    </form>
}

